{
  "manifest_version": 3,
  "name": "uOttawaRMP",
  "description": "RMP extension for uOttawa's course page.",
  "version": "1.1.0",
  "action": {
    "default_title": "Search RateMyProf",
    "default_icon": "assets/icon128.png"
  },
  "permissions": [
    "activeTab", "scripting"
  ],
  "host_permissions": [
    "https://www.ratemyprofessors.com/*"
  ],
  "optional_permissions": ["webNavigation", "tabs"],
  "background": {
    "service_worker": "background.js"
  }
}
