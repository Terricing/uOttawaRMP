{
  "manifest_version": 3,
  "name": "uOttawaRMP",
  "description": "RMP extension for uOttawa's course page.",
  "version": "0.1.0",
  "action": {
    "default_title": "Search RateMyProf"
  },
  "permissions": [
    "activeTab", "scripting", "declarativeContent"
  ],
  "optional_permissions": ["webNavigation", "tabs"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "icons": {
    "128": "assets/icon128.png"
  }
}
